@model WorkAround.Models.EmployerViewModel

<div class="post-item-container row">
    <div class="col-xs-2" id="icon_container">
        <img id="post_icon" src="~/images/20.png" class="img-responsive" />
        <input type="button" value="Visit" onclick="location.href = '@Url.Action("Employer", "Index")?id=' + @Model.Id" class="btn" />
    </div>

    <div class="col-xs-10">
        <div class="row ">
            <h5 class="col-xs-12 title-text post-title">@Model.Nickname</h5>
        </div>
        <div>
            <h6 class="col-xs-12 regular-text">@Model.Description</h6>
        </div>
        <div>
            <h6 class="col-xs-2 subtitle-text">Experience: @Model.JobConditions</h6>
            <h6 class="col-xs-1 subtitle-text">Proffesion: @Model.Proffesion</h6>
        </div>
    </div>
</div>
